{
  "name": "guantr",
  "version": "1.0.0-beta.0",
  "description": "Flexible JavaScript library for efficient authorization and permission checking",
  "repository": "Hrdtr/guantr",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "vitest dev --typecheck",
    "lint": "eslint .",
    "lint:fix": "automd && eslint . --fix",
    "prepack": "pnpm build",
    "prepare": "husky && echo \"pnpm lint-staged\" > .husky/pre-commit && echo \"pnpm commitlint --edit ${1}\" > .husky/commit-msg",
    "play": "jiti playground",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && pnpm typecheck && vitest run --typecheck --coverage",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.0.3",
    "@types/node": "^20.12.7",
    "@vitest/coverage-v8": "^1.5.3",
    "automd": "^0.3.7",
    "changelogen": "^0.5.5",
    "commitlint": "^19.3.0",
    "eslint": "^9.1.1",
    "eslint-config-unjs": "^0.3.0-rc.7",
    "husky": "^9.0.11",
    "jiti": "^1.21.0",
    "lint-staged": "^15.2.5",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0",
    "vitest": "^1.5.3"
  },
  "packageManager": "pnpm@9.2.0",
  "lint-staged": {
    "**/*.{ts,js,mjs,vue,html,json,yml}": [
      "pnpm lint:fix"
    ]
  }
}
